mixin dropdown(options={})
  div.dropdown__wrapper
    div.dropdown__name
      +text('H3-bold', options.name)
      +text('H3-normal', options.state, 'dropdown__name_state')
    div(class= options.about).iqdropdown
      +text('Body', '', 'dropdown__selection')
      div.iqdropdown-menu
        div(class='iqdropdown-menu-option' data-id='item1' data-defaultcount=options.defaultcounts[0] data-mincount="0")
          div
            +text('H3-bold', options.items[0])
        div(class='iqdropdown-menu-option' data-id='item2' data-defaultcount=options.defaultcounts[1] data-mincount="0")
          div
            +text('H3-bold', options.items[1])
        div(class='iqdropdown-menu-option' data-id='item3' data-defaultcount=options.defaultcounts[2] data-mincount="0")
          div
            +text('H3-bold', options.items[2])
        if options.button
          button.text-types_type_H3_bold.dropdown__button.dropdown__button_type_clear= 'Очистить'
          button(class='text-types_type_H3_bold dropdown__button dropdown__button_type_close' type= 'reset')= 'Применить'
