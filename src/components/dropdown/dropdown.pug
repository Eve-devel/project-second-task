//-
  options.name - название;
  options.state - статус (для ui kit);
  options.about - главный класс дропдауна для js (guests или rooms);
  options.defaultcounts - значения по умолчанию для пунктов (массив, [] обязателен);
  options.items - наименования пунктов (массив, [] обязателен);
  options.button - наличие кнопок (bool);

mixin dropdown(options={})
  .dropdown
    .dropdown__name
      h3=options.name
      h3.dropdown__state=options.state
    .iqdropdown(class= options.about)
      p.iqdropdown__selection
      .iqdropdown-menu
        .iqdropdown-menu-option(data-id='item1' data-defaultcount=options.defaultcounts[0] data-mincount="0")
          div
            h3=options.items[0]
        .iqdropdown-menu-option(data-id='item2' data-defaultcount=options.defaultcounts[1] data-mincount="0")
          div
            h3=options.items[1]
        .iqdropdown-menu-option(data-id='item3' data-defaultcount=options.defaultcounts[2] data-mincount="0")
          div
            h3=options.items[2]
        if options.button
          button.dropdown__button.dropdown__button_type_clear= 'Очистить'
          button.dropdown__button.dropdown__button_type_close= 'Применить'
