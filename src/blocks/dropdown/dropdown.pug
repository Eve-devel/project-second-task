mixin dropdown(name, about, items, need_button, state)
  div.text-field
    div.text-field__name
      +text('H3-bold', name)
      +text('H3-normal', state, 'text-field__name_state')
    div(class= about).iqdropdown
      p.iqdropdown-selection
      div.iqdropdown-menu
        div(class='iqdropdown-menu-option' data-id='item1' data-defaultcount="0" data-mincount="0")
          div
            p.iqdropdown-item= items[0]
        div(class='iqdropdown-menu-option' data-id='item2' data-defaultcount="0" data-mincount="0")
          div
            p.iqdropdown-item= items[1]
        div(class='iqdropdown-menu-option' data-id='item3' data-defaultcount="0" data-mincount="0")
          div
            p.iqdropdown-item= items[2]
        if need_button
          button.iqdropdown-menu-clear= 'Очистить'
          button(class='iqdropdown-menu-close' type= 'reset')= 'Применить'
