div.text-types__wrapper
  -
   var types = [
    {
      type: 'H1',
      type_font: 'text-types__name_size_24',
      text: 'This one is the sub-section or widget title',
      text_font: 'text-types_type_H1'
    },
    {
      type: 'H2',
      type_font: 'text-types__name_size_19',
      text: 'Next one is the item title inside widgets',
      text_font: 'text-types_type_H2'
    },
    {
      type: 'H3',
      type_font: 'text-types__name_size_12',
      text: 'This is a label or CTA text',
      text_font: 'text-types_type_H3'
    },
    {
      type: 'Body',
      type_font: 'text-types__name_size_14',
      text: 'This is the body text which is used for most of the design, like paragraphs, lists, etc.',
      text_font: 'text-types_type_Body text-types_type_Body_width'
    }
   ]
  each val in types
    .text-types
      div(class= val.type_font).text-types__name= val.type
      div(class= val.text_font)= val.text
