block title
  | Form Elements

block content
  .form-elements
    +layout({mix: 'form-elements__elements', row_gap: '100'})
      +layout({row_gap: '40'})
        +layout({row_gap: '20'})
          +text-field({
            type:'email',
            name:'Text Field',
            placeholder:'Email',
            state:'Default',
          })
          +text-field({
            type: 'text',
            name: 'Text Field',
            content: 'This is pretty awesome',
            state: 'Hover/Focus'
          })
          +dropdown({
            name: 'Dropdown',
            about: 'guests',
            items: ['Взрослые', 'Дети', 'Младенцы'],
            defaultcounts: [],
            button: true,
            state: 'Default'
          })
          +text-field({
            type: 'text',
            class: 'birthday',
            name: 'masked text field',
            state: 'Default',
            placeholder: 'ДД.ММ.ГГГГ'
          })
        +layout({row_gap: '40'})
          +date-dropdown({
            first_name: 'date Dropdown',
            second_name: 'date Dropdown'
          })
          +layout({mix: 'form-elements__left-narrow-column', row_gap: '40'})
              +filter-date-dropdown({
                name: 'filter date dropdown'
              })
              +text-field({
                type: 'email',
                name: 'subscription text field',
                placeholder: 'Email',
                button: true
              })
      +layout({row_gap: '41', mix: 'form-elements__central-column'})
        +checkbox({
          texts: [{text:'Можно курить'},
                  {text:'Можно с питомцами',
                   checked: true},
                  {text:'Можно пригласить гостей\n(до 10 человек)',
                   checked: true}
                 ],
          name: 'Checkbox Buttons'
        })
        +layout({row_gap: '37'})
          div
            h3.form-elements__h3='Radio Buttons'
            +radio({
              texts: ['Мужчина', 'Женщина']
            })
          div
            h3.form-elements__h3='toggle'
            +layout({row_gap: '10'})
              +toggle({
                text: 'Получать спецпредложения'
              })
              +toggle({
                text: 'Получать спецпредложения'
              })
        .form-elements__like-button-block
          h3.form-elements__h3='Like Button'
          +like-button({
            val: '2',
            checked: false,
            class: 'form-elements__like-button'
          })
          +like-button({
            val: '12',
            checked: true
          })
        div
          h3.form-elements__h3='Rate Button'
          +rate-btn({
            val: '4'
          })
          +rate-btn({
            val: '5'
          })
      +layout({row_gap: '42'})
        +range-slider({name:'Range Slider'})
        +layout({row_gap: '40'})
          div
            h3.form-elements__h3='buttons'
            +layout({row_gap: '31'})
              +layout({row_gap: '30', mix:'form-elements__buttons-block'})
                +button({
                  type: 'color',
                  text: 'click me'
                })
                +button({
                  type: 'color',
                  text: 'click me',
                  class_for_wrapper:'form-elements__button_color_opacity'
                })
                +button({
                  type: 'colorless',
                  text: 'click me'
                })
                +button({
                  type: 'colorless',
                  text: 'click me',
                  class_for_wrapper:'form-elements__button_color_opacity'
                })
              .form-elements__buttons
                h3.form-elements__button_color_purple='click me'
                h3.form-elements__button_color_grey='click me'
              +button({
                type: 'button',
                text: 'перейти к оплате'
              })
          div
            h3.form-elements__h3='pagination'
            +pagination({
              caption: '1 – 12 из 100+ вариантов аренды'
            })
      +layout({mix: 'form-elements__left-narrow-column', row_gap: '20'})
        +dropdown({
          name: 'Dropdown',
          about: 'rooms',
          items: ['Спальни', 'Кровати', 'Ванные комнаты'],
          defaultcounts: [2, 2]
        })
        +dropdown({
          name: 'Dropdown',
          about: 'rooms',
          items: ['Спальни', 'Кровати', 'Ванные комнаты'],
          defaultcounts: [2, 2]
        })
      +layout({mix: 'form-elements__central-column'})
        +dropdown({
          name: 'Dropdown',
          about: 'guests',
          items: ['Взрослые', 'Дети', 'Младенцы'],
          defaultcounts: [],
          button: true,
          state: 'Default'
        })
      div
        +dropdown({
          name: 'Dropdown',
          about: 'guests',
          items: ['Взрослые', 'Дети', 'Младенцы'],
          defaultcounts: [],
          button: true,
          state: 'Default'
        })
      +layout({row_gap: '20'})
        +checkbox({
          expandable: true,
          texts: [{text:'Завтрак'},
                  {text:'Письменный стол', checked: true},
                  {text:'Стул для кормления', checked: true},
                  {text:'Кроватка', checked: true},
                  {text:'Телевизор'},
                  {text:'Шампунь'},
                  {text:'Телевизор'},
                  {text:'Шампунь'}
                 ],
          name: 'expandable checkbox list'
        })
        +checkbox({
          expandable: true,
          texts: [{text:'Завтрак'},
                  {text:'Письменный стол', checked: true},
                  {text:'Стул для кормления', checked: true},
                  {text:'Кроватка', checked: true},
                  {text:'Телевизор'},
                  {text:'Шампунь'},
                  {text:'Телевизор'},
                  {text:'Шампунь'}
                 ],
          name: 'expandable checkbox list'
        })
      +layout({mix: 'form-elements__central-column'})
        +checkbox({
          texts: [{text:'Широкий коридор',
                  rich:'Ширина коридоров в номере\nне менее 91 см.'},
                  {text:'Помощник для инвалидов',
                  rich:'На 1 этаже вас встретит специалист\nи проводит до номера.'}
                 ],
          name: 'rich checkbox buttons'
        })
      div
        +bullet-list({
          name: 'bullet list',
          items: ['Нельзя с питомцами',
                  'Без вечеринок и мероприятий',
                  'Время прибытия — после 13:00,\nа выезд до 12:00']
        })
      div
        +icon-text-list({
          items: [
                  {
                   icon: 'insert_emoticon',
                   header: 'Комфорт',
                   text: 'Шумопоглощающие стены'},
                  {
                   icon: 'location_city',
                   header: 'Удобство',
                   text: 'Окно в каждой из спален'
                  }
                 ]
        })
      +layout({mix: 'form-elements__central-column form-elements__comment'})
        +comment({
          comments: [{photo: './img/photo.png',
                      name: 'Мурад Сарафанов',
                      time: '5 дней назад',
                      like: {val: '12', checked: true},
                      text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
                      }]
        })


