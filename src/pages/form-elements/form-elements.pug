extends ../layouts/ui-kit

block title
  | Form Elements


block content
  include ../../components/text-field/text-field.pug
  include ../../components/dropdown/dropdown.pug
  include ../../components/date-dropdown/date-dropdown.pug

  .elements__main
    +text-field({
      type:'email',
      name:'Text Field',
      placeholder:'Email',
      state:'Default',
    })
    +text-field({
      type: 'text',
      name: 'Text Field',
      content: 'This is pretty awesome',
      state: 'Hover/Focus'
    })
    +dropdown({
      name: 'Dropdown',
      about: 'guests',
      items: ['Взрослые', 'Дети', 'Младенцы'],
      defaultcounts: [],
      button: true,
      state: 'Default'
    })
    +text-field({
      type: 'text',
      id: 'birthday',
      name: 'masked text field',
      state: 'Default',
      placeholder: 'ДД.ММ.ГГГГ'
    })
    +dropdown({
      name: 'Dropdown',
      about: 'rooms',
      items: ['Спальни', 'Кровати', 'Ванные комнаты'],
      defaultcounts: [2, 2]
    })
    +text-field({
      type: 'email',
      name: 'subscription text field',
      placeholder: 'Email',
      button: true
    })
    +date-dropdown()

block scripts
  script(src="https://code.jquery.com/jquery-3.0.0.min.js" integrity="sha256-JmvOoLtYsmqlsWxa7mDSLMwa6dZ9rrIdtrrVYRnDRH0=" crossorigin="anonymous")
  script(src='../../components/dropdown/plagin/item-quantity-dropdown.min.js')
  script(src='../../components/dropdown/dropdown.js')
  script(src="https://unpkg.com/imask")
  script(src='../../components/text-field/text-field.js')
  script(src='../../components/date-dropdown/date-dropdown.js')
