extends ../layouts/ui-kit


block title
  | Form Elements


block content
  include ../../components/text-field/text-field.pug
  include ../../components/dropdown/dropdown.pug
  include ../../components/date-dropdown/date-dropdown.pug
  include ../../components/filter-date-dropdown/filter-date-dropdown.pug
  include ../../components/checkbox/checkbox.pug
  include ../../components/radio/radio.pug
  include ../../components/toggle/toggle.pug
  include ../../components/like-button/like-button.pug
  include ../../components/rate-btn/rate-btn.pug
  include ../../components/range-slider/range-slider.pug
  include ../../components/button/button.pug
  include ../../components/pagination/pagination.pug
  include ../../components/bullet-list/bullet-list.pug
  include ../../components/icon-text-list/icon-text-list.pug
  include ../../components/comment/comment.pug

  .elements__main
    +text-field({
      type:'email',
      name:'Text Field',
      placeholder:'Email',
      state:'Default',
    })
    +text-field({
      type: 'text',
      name: 'Text Field',
      content: 'This is pretty awesome',
      state: 'Hover/Focus'
    })
    +dropdown({
      name: 'Dropdown',
      about: 'guests',
      items: ['Взрослые', 'Дети', 'Младенцы'],
      defaultcounts: [],
      button: true,
      state: 'Default'
    })
    +text-field({
      type: 'text',
      class: 'birthday',
      name: 'masked text field',
      state: 'Default',
      placeholder: 'ДД.ММ.ГГГГ'
    })
    +dropdown({
      name: 'Dropdown',
      about: 'rooms',
      items: ['Спальни', 'Кровати', 'Ванные комнаты'],
      defaultcounts: [2, 2]
    })
    +text-field({
      type: 'email',
      name: 'subscription text field',
      placeholder: 'Email',
      button: true
    })
    +date-dropdown({
      first_name: 'date Dropdown',
      second_name: 'date Dropdown'
    })
    +filter-date-dropdown({
      name: 'filter date dropdown'
    })
    +checkbox({
      texts: [{text:'Можно курить'},
              {text:'Можно с питомцами',
               checked: 'checked'},
              {text:'Можно пригласить гостей\n(до 10 человек)',
               checked: 'checked'}
             ],
      name: 'Checkbox Buttons',
      checked: 'checked'
    })
    +radio({
      texts: ['Мужчина', 'Женщина'],
      name: 'Radio Buttons'
    })
    +text('H3-bold', 'toggle')
    +toggle({
      text: 'Получать спецпредложения'
    })
    +toggle({
      text: 'Получать спецпредложения'
    })
    +text('H3-bold', 'Like Button')
    div
      +like-button({
        val: '2'
      })
      +like-button({
        val: '12',
        checked: 'checked'
      })
    +text('H3-bold', 'Rate Button')
    div
      +rate-btn({
        val: '4'
      })
      +rate-btn({
        val: '5'
      })
    +range-slider()
    h3='buttons'
    +button({
      type: 'color',
      text: 'click me'
    })
    +button({
      type: 'colorless',
      text: 'click me'
    })
    +button({
      type: 'button',
      text: 'перейти к оплате'
    })
    +comment({
      comments: [{photo: '../../img/photo.png',
                  name: 'Мурад Сарафанов',
                  time: '5 дней назад',
                  like: {val: '12', checked: 'checked'},
                  text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
                  }]
    })
    +checkbox({
      list: true,
      texts: [{text:'Завтрак'},
              {text:'Письменный стол', checked: 'checked'},
              {text:'Стул для кормления', checked: 'checked'},
              {text:'Кроватка', checked: 'checked'},
              {text:'Телевизор'},
              {text:'Шампунь'},
              {text:'Телевизор'},
              {text:'Шампунь'}
             ],
      name: 'expandable checkbox list'
    })
    +checkbox({
      texts: [{text:'Широкий коридор',
              rich:'Ширина коридоров в номере\nне менее 91 см.'},
              {text:'Помощник для инвалидов',
              rich:'На 1 этаже вас встретит специалист\nи проводит до номера.'}
             ],
      name: 'rich checkbox buttons'
    })
    +pagination({
      caption: '1 – 12 из 100+ вариантов аренды'
    })
    +bullet-list({
      name: 'bullet list',
      items: ['Нельзя с питомцами',
              'Без вечеринок и мероприятий',
              'Время прибытия — после 13:00, а выезд до 12:00']
    })
    +icon-text-list({
      items: [
              {
                icon: 'insert_emoticon',
                 header: 'Комфорт',
                 text: 'Шумопоглощающие стены'},
               {
                 icon: 'location_city',
                 header: 'Удобство',
                 text: 'Окно в каждой из спален'}]
    })


